                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Border.RenderTransform>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" Grid.ColumnSpan="6" HorizontalAlignment="Left" Height="0" Margin="-38,68,0,0" Grid.Row="1" VerticalAlignment="Top" Width="831" RenderTransformOrigin="0.5,0.5">
