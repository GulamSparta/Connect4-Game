        <Border BorderBrush="Black" BorderThickness="1" Grid.ColumnSpan="6" HorizontalAlignment="Left" Height="0" Margin="-30,68,-7.4,0" Grid.Row="4" VerticalAlignment="Top" Width="831" RenderTransformOrigin="0.5,0.5">
