        <Border BorderBrush="Black" BorderThickness="1" Grid.ColumnSpan="6" HorizontalAlignment="Left" Height="0" Margin="-28,68,-9.4,0" Grid.Row="3" VerticalAlignment="Top" Width="831" RenderTransformOrigin="0.5,0.5">
