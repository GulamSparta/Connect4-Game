<Window x:Class="newGrid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:newGrid"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="Grid01">
            <Grid.ColumnDefinitions>
                <!--Column is going down-->
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            <!-- it is set by default -->
           </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <!--Row is going across-->
                <RowDefinition Height="*"/>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <!-- it is set by default -->
           </Grid.RowDefinitions>


        <Button x:Name="button1" Grid.Column="0" Click="Button6_Click"></Button>
        <Button x:Name="button2" Grid.Column="1" Click="Button6_Click"></Button>
        <Button x:Name="button3" Grid.Column="2" Click="Button6_Click"></Button>
        <Button x:Name="button4" Grid.Column="3" Click="Button6_Click"></Button>
        <Button x:Name="button5" Grid.Column="4" Click="Button6_Click"></Button>
        <Button x:Name="button6" Grid.Column="5" Click="Button6_Click"></Button>

        <Button x:Name="button7" Grid.Row="1" Click="Button6_Click"></Button>
        <Button x:Name="button8" Grid.Row="2" Click="Button6_Click"></Button>
        <Button x:Name="button9" Grid.Row="3" Click="Button6_Click"></Button>
        <Button x:Name="button10" Grid.Row="4" Click="Button6_Click"></Button>
        <Button x:Name="button11" Grid.Row="5" Click="Button6_Click"></Button>

        <!--We skip out the index number zero but we already have them filled at the top-->
        
        <!--Column 1-->
        <Button x:Name="button12" Grid.Row="1" Click="Button6_Click" Grid.Column="1"></Button>
        <Button x:Name="button13" Grid.Row="2" Click="Button6_Click" Grid.Column="1"></Button>
        <Button x:Name="button14" Grid.Row="3" Click="Button6_Click" Grid.Column="1"></Button>
        <Button x:Name="button15" Grid.Row="4" Click="Button6_Click" Grid.Column="1"></Button>
        <Button x:Name="button16" Grid.Row="5" Click="Button6_Click" Grid.Column="1"></Button>
        
        <!--Column 2 -->
        <Button x:Name="button17" Grid.Row="1" Click="Button6_Click" Grid.Column="2"></Button>
        <Button x:Name="button18" Grid.Row="2" Click="Button6_Click" Grid.Column="2"></Button>
        <Button x:Name="button19" Grid.Row="3" Click="Button6_Click" Grid.Column="2"></Button>
        <Button x:Name="button20" Grid.Row="4" Click="Button6_Click" Grid.Column="2"></Button>
        <Button x:Name="button21" Grid.Row="5" Click="Button6_Click" Grid.Column="2"></Button>
        
        <!--Column 3 -->
        <Button x:Name="button22" Grid.Row="1" Click="Button6_Click" Grid.Column="3"></Button>
        <Button x:Name="button23" Grid.Row="2" Click="Button6_Click" Grid.Column="3"></Button>
        <Button x:Name="button24" Grid.Row="3" Click="Button6_Click" Grid.Column="3"></Button>
        <Button x:Name="button25" Grid.Row="4" Click="Button6_Click" Grid.Column="3"></Button>
        <Button x:Name="button26" Grid.Row="5" Click="Button6_Click" Grid.Column="3"></Button>

        <!--Column 4 -->
        <Button x:Name="button27" Grid.Row="1" Click="Button6_Click" Grid.Column="4"></Button>
        <Button x:Name="button28" Grid.Row="2" Click="Button6_Click" Grid.Column="4"></Button>
        <Button x:Name="button29" Grid.Row="3" Click="Button6_Click" Grid.Column="4"></Button>
        <Button x:Name="button30" Grid.Row="4" Click="Button6_Click" Grid.Column="4"></Button>
        <Button x:Name="button31" Grid.Row="5" Click="Button6_Click" Grid.Column="4"></Button>

        <!--Column 5 -->
        <Button x:Name="button32" Grid.Row="1" Click="Button6_Click" Grid.Column="5"></Button>
        <Button x:Name="button33" Grid.Row="2" Click="Button6_Click" Grid.Column="5"></Button>
        <Button x:Name="button34" Grid.Row="3" Click="Button6_Click" Grid.Column="5"></Button>
        <Button x:Name="button35" Grid.Row="4" Click="Button6_Click" Grid.Column="5"></Button>
        <Button x:Name="button36" Grid.Row="5" Click="Button6_Click" Grid.Column="5"></Button>
    </Grid>
</Window>
